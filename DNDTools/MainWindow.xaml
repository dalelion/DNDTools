<Window x:Class="DNDTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DNDTools"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid Margin="0,0,0,0">
    <TextBox Name="Chatbox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="634" Margin="0,396,0,0"/>

    <Label Content="Map goes in the background&#xD;&#xA;Remove Label when done" HorizontalAlignment="Left" Height="45" Margin="24,22,0,0" VerticalAlignment="Top" Width="184"/>
    <Button Content="Options&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="53" Margin="0,255,0,0" Height="28"/>
    <Button Name="btnDice" Content="&#xA;Dice Roll&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Margin="0,283,0,0" Height="51" Click="ButtonDiceRoll_Click"/>
    <ScrollViewer Name="Chatlog" HorizontalAlignment="Left" Height="62" Margin="0,334,0,0" VerticalAlignment="Top" Width="634" />
    <Grid HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="153" Margin="639,0,0,0">
      <Button Content="End Turn" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="0,373,0,0" Height="46" Click="ButtonEndTurn_Click"/>
      <Button Content="End Game" HorizontalAlignment="Left" Margin="80,373,-2,0" VerticalAlignment="Top" Width="75" Height="46" Click="ButtonEndGame_Click"/>
    </Grid>
  </Grid>
</Window>
