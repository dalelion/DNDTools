<Window x:Class="DNDTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DNDTools"
        mc:Ignorable="d"
        Title="MainWindow" Height="458" Width="818">
    <Grid Margin="0,0,0,0">
        <TextBox Name="Chatbox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="634" Margin="0,396,0,0"/>

        <Image HorizontalAlignment="Left" Height="334" VerticalAlignment="Top" Width="577" Source="20151117_Sword-Coast-Map.jpg"/>
        <Label Content="" HorizontalAlignment="Left" Height="45" Margin="24,22,0,0" VerticalAlignment="Top" Width="184"/>
        <Button Content="Options&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="53" Margin="0,255,0,0" Height="28"/>
        <Button Name="btnDice" Content="&#xA;Dice Roll&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Margin="0,283,0,0" Height="51" Click="ButtonDiceRoll_Click"/>
        <ScrollViewer Name="Chatlog" HorizontalAlignment="Left" Height="62" Margin="0,334,0,0" VerticalAlignment="Top" Width="634" >
            <Border BorderBrush="Black" BorderThickness="1" Height="62" Width="634"/>
        </ScrollViewer>
        <Grid HorizontalAlignment="Left" Height="422" VerticalAlignment="Top" Width="171" Margin="639,0,0,0">
            <Button Content="End Turn" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="3,370,0,0" Height="46" Click="ButtonEndTurn_Click"/>
            <Button Content="End Game" HorizontalAlignment="Left" Margin="83,370,0,0" VerticalAlignment="Top" Width="75" Height="46" Click="ButtonEndGame_Click"/>
            <Image x:Name="playerClass" HorizontalAlignment="Left" Height="101" VerticalAlignment="Top" Width="60" Margin="10,10,0,0" Source="tempPlayer.jpg"/>
            <Border BorderBrush="Black" BorderThickness="1" Height="419" VerticalAlignment="Top" HorizontalAlignment="Left" Width="171">
                <Label x:Name="lblNameCategory" Margin="69,8,60,386" RenderTransformOrigin="0.5,0.5" Content="Name:" FontSize="10">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="0.091"/>
                            <RotateTransform/>
                            <TranslateTransform X="0.332"/>
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>
            </Border>
        </Grid>

    </Grid>
</Window>
