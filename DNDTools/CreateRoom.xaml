<Window x:Class="DNDTools.CreateRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DNDTools"
        mc:Ignorable="d"
        Title="CreateRoom" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="Black">
        <Image Margin="294,27,283,301" Source="dungeons-dragons.jpg" Stretch="Fill"/>
        <Image Margin="573,29,-116,43" Source="73921_Martial_Powers_Cards.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5" Opacity="0.3">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="36.839"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Margin="-111,18,565,55" Source="73921_Martial_Powers_Cards.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5" Opacity="0.3">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-29.295"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Label Content="Create a Room" HorizontalAlignment="Center" Margin="228,107,210,248" VerticalAlignment="Center" Foreground="White" Width="354" FontSize="45" FontWeight="Bold" Height="64"/>
        <Image Margin="0,330,533,-11" Source="unconventional_dnd_character_commissions_by_rhlpixels_dcoczae-fullview.png" Stretch="Fill" Opacity="0.8"/>
        <Image Margin="526,348,99,-6" Source="tumblr_prkgg59PN61sgibvjo1_400.png" Stretch="Fill" Opacity="0.8"/>
        <Label Content="Type in the room name:" HorizontalAlignment="Left" Margin="254,232,0,0" VerticalAlignment="Top" Width="145" Foreground="#FFA4A4A4" Height="33"/>

        <TextBox Name="RoomName" HorizontalAlignment="Left" Margin="254,257,0,0" VerticalAlignment="Top" Width="177" KeyDown="KeyboardEnter_KeyDown" Height="22"/>
        <Button HorizontalAlignment="Left" Margin="363,358,0,0" VerticalAlignment="Top" Width="86" Click="ButtonReturn_Click" Height="32" Content="Return"/>
        <Button HorizontalAlignment="Left" Margin="454,257,0,0" VerticalAlignment="Top" Width="87" Click="ButtonCreate_Click" Height="22" Content="Create"/>

    </Grid>
</Window>
