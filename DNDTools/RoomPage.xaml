<Window x:Class="DNDTools.RoomPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DNDTools"
        mc:Ignorable="d"
        Title="RoomPage" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="792" Background="Black">
            <Image Margin="263,0,255,306" Source="dungeons-dragons.jpg" Stretch="Fill"/>
            <Image Margin="573,29,-116,43" Source="73921_Martial_Powers_Cards.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5" Opacity="0.3">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="36.839"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image Margin="-111,18,565,55" Source="73921_Martial_Powers_Cards.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5" Opacity="0.3">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-29.295"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image Margin="0,330,533,-11" Source="unconventional_dnd_character_commissions_by_rhlpixels_dcoczae-fullview.png" Stretch="Fill" Opacity="0.8"/>
            <Image Margin="526,348,99,-6" Source="tumblr_prkgg59PN61sgibvjo1_400.png" Stretch="Fill" Opacity="0.8"/>
            <Label Content="Input Room Number:" HorizontalAlignment="Left" Margin="159,113,0,0" VerticalAlignment="Top" Width="422" Foreground="#FFA4A4A4" FontSize="40"/>
            <Label Content="Create a Room:" HorizontalAlignment="Left" Margin="159,240,0,0" VerticalAlignment="Top" Width="305" Foreground="#FFA4A4A4" FontSize="40"/>
            <Button Name="btnBack" Content="Home" HorizontalAlignment="Left" Margin="340,339,0,0" VerticalAlignment="Top" Width="103" Height="35"/>
            <Button Name="btnConnect" Content="Connect" HorizontalAlignment="Left" Margin="494,180,0,0" VerticalAlignment="Top" Width="101" Height="33" RenderTransformOrigin="0.654,0.525" Click="Button_Click"/>
            <Button Content="Create" HorizontalAlignment="Left" Margin="494,256,0,0" VerticalAlignment="Top" Width="101" Height="33" RenderTransformOrigin="0.654,0.525"/>
            <TextBox Name="RoomCode" HorizontalAlignment="Left" Height="33" Margin="159,180,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="284"/>
        </Grid>

    </Grid>
</Window>
